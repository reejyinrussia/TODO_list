<h1>Editing: <%= @page.title %> </h1>

<%= form_for @page do |f| %>
<div>
<%= f.label :title %>
<%= f.text_field :title, placeholder: 'title', required: true %>
</div>

<div>
<%= f.label :task %>
<%= f.text_field :task, placeholder: 'task', required: true %>
</div>

<div>
<%= f.label :private %>
<%= f.check_box :private %>
</div>

<%= f.submit %>
<% end %>
